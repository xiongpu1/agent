services:
  neo4j:
    image: neo4j:latest
    volumes:
        - neo4j-logs:/logs
        - neo4j-config:/config
        - neo4j-data:/data
        - neo4j-plugins:/plugins
    environment:
        - NEO4J_AUTH=neo4j/Root@12345678@
    ports:
      - "7474:7474"
      - "7687:7687"
    networks:
      - knowledge-ai
    restart: always

  master:
    image: chrislusf/seaweedfs # use a remote image
    ports:
      - 9333:9333
      - 19333:19333
      - 9324:9324
    command: "master -ip=master -ip.bind=0.0.0.0 -metricsPort=9324"
    networks:
      - knowledge-ai
    restart: always

  volume:
    image: chrislusf/seaweedfs # use a remote image
    ports:
      - 8080:8080
      - 18080:18080
      - 9325:9325
    command: 'volume -mserver="master:9333" -ip.bind=0.0.0.0 -port=8080  -metricsPort=9325'
    depends_on:
      - master
    networks:
      - knowledge-ai
    restart: always

  filer:
    image: chrislusf/seaweedfs # use a remote image
    ports:
      - 8888:8888
      - 18888:18888
      - 9326:9326
    command: 'filer -master="master:9333" -ip.bind=0.0.0.0 -metricsPort=9326'
    tty: true
    stdin_open: true
    depends_on:
      - master
      - volume
    networks:
      - knowledge-ai
    restart: always

  s3:
    image: chrislusf/seaweedfs # use a remote image
    ports:
      - 8333:8333
      - 9327:9327
    command: 's3 -filer="filer:8888" -ip.bind=0.0.0.0 -metricsPort=9327'
    depends_on:
      - master
      - volume
      - filer
    networks:
      - knowledge-ai
    restart: always

  webdav:
    image: chrislusf/seaweedfs # use a remote image
    ports:
      - 7333:7333
    command: 'webdav -filer="filer:8888"'
    depends_on:
      - master
      - volume
      - filer
    networks:
      - knowledge-ai
    restart: always

  prometheus:
    image: prom/prometheus:v2.21.0
    ports:
      - 9000:9090
    volumes:
      - prometheus-config:/etc/prometheus
    command: --web.enable-lifecycle  --config.file=/etc/prometheus/prometheus.yml
    depends_on:
      - s3
    networks:
      - knowledge-ai
    restart: always

networks:
  knowledge-ai:

volumes:
  neo4j-logs:
  neo4j-config:
  neo4j-data:
  neo4j-plugins:
  prometheus-config:
